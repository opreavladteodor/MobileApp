<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MobileApp.View.addR">
    <ContentPage.Content>
        <StackLayout Margin="20,35,0,20"
             x:Name="stackLayout">
            <Label Text="Click aici pentru a creea o notificare acum."
           TextColor="Blue"
           HorizontalOptions="Center"
           VerticalOptions="Start" />
            <Button Text="Creeaza o Notificare Acum"
            HorizontalOptions="Center"
            VerticalOptions="Start"
            Clicked="OnSendClick" />
            <Label Text="Click aici pentru a creea o notificare maine."
           TextColor="Blue"
           HorizontalOptions="Center"
           VerticalOptions="Start" />
            <Button Text="Creeaza o Notificare in 24 ore."
            HorizontalOptions="Center"
            VerticalOptions="Start"
            Clicked="OnScheduleClick" />
        </StackLayout>
    </ContentPage.Content>
</ContentPage>